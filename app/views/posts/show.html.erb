<p id="notice"><%= notice %></p>

<p>
<table class="posts" summary="User posts">
     <%= render @post %>
</table>
</p>

<p>
  <b>User:</b>
  <%= @post.user.username %>
</p>


<p>
  <b>Replies:</b>
  <% @post.replies.each do |reply| %>
    <%= embed(reply.audio_url) %>
  <% end %>
</p>


<p>
  <b>Post Reply:</b>
  <%= form_for [@post, @post.replies.build] do |f| %>
  <div class="field">
  Audio URL, for now.  We'll record it properly soon:  <%= f.text_field :audio_url %>
  </div>

  <div class="actions">
    <%= f.submit "Post Reply" %>
  </div>
<% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
