<p id="notice"><%= notice %></p>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
<script src="/assets/sdk.js"></script>  
<script src="/assets/sc_recorder.js"></script>  

<p>
<table class="posts" summary="User posts">
     <%= render @post %>
</table>
</p>

<p>
  <b>User:</b>
  <%= @post.user.username %>
</p>

<p>
  <b>Replies:</b>
  <% @post.replies.each do |reply| %>
    <%= embed(reply.audio_url) %>
    By <%= reply.user.username %>
  <% end %>
</p>


<p>
  <b>Post Reply:</b>
  <%= form_for [@post, @post.replies.build] do |f| %>
  <%= render 'record' %>
  <div class="actions">
    <%= f.submit "Post Reply" %>
  </div>
<% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<script>document.getElementsByName('commit')[0].disabled = true;</script>
