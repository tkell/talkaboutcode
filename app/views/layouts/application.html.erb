<!DOCTYPE html>
<html>
<head>
  <title>Talkaboutcode</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
<%= link_to "You", current_user %>
<%= link_to "Sign out", signout_path %>
<%= link_to "New Post", '/posts/new' %>
<% else %>
<%= link_to "Sign in", signin_path %>
<%= link_to "Sign up", signup_path %>
<% end %>

<%= link_to "View Posts", '/posts' %>

<%= link_to "About", '/about' %>
<%= link_to "Contact", '/contact' %>

<%= form_tag("/tags", :method => "get") do %>
  <%= label_tag(:tag, "Search by tag:") %>
  <%= text_field_tag(:tag) %>
  <%= submit_tag("Go!") %>
<% end %>

<%= yield %>

</body>
</html>
